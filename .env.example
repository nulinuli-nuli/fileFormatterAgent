# OpenAI API密钥
OPENAI_API_KEY=your_openai_api_key_here
# 大模型API的URL，默认使用OpenAI
MODEL_API_URL=https://api.openai.com/v1/chat/completions
# 使用的模型名称
MODEL_NAME=gpt-3.5-turbo
# 服务运行端口
PORT=8000
# 上传文件保存路径
UPLOAD_DIR=uploads
# 生成文件保存路径
OUTPUT_DIR=outputs

# 日志配置
# 日志级别：debug, info, warning, error, critical
LOG_LEVEL=info
# 日志目录
LOG_DIR=logs
# 日志文件格式
LOG_FORMAT=%(asctime)s [%(levelname)s] [%(filename)s:%(lineno)d] - %(message)s
# 日志文件最大大小（字节），默认10MB
MAX_LOG_SIZE=10485760
# 保留的日志文件备份数量
BACKUP_COUNT=5
# 是否在控制台输出日志
CONSOLE_OUTPUT=true
# 是否使用按时间轮转的日志文件
TIME_ROTATING=false
# 按时间轮转的方式：S-秒，M-分钟，H-小时，D-天，midnight-午夜
ROTATE_WHEN=midnight 